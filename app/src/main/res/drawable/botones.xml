<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_pressed="true" >

        <shape>

            <solid
                android:color="#e77223" />
            <stroke
                android:width="2dp"
                android:color="#e77223" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>

    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ff8f3e"
                android:endColor="#ff8f3e"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#e77223" />
            <corners
                android:radius="7dp" />
            <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
        </shape>
    </item>
</selector>